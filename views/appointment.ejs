<%- include('header') %>

    <body>
        <%- include('navbar') %>

            <div class="container">
                <h1 class="mt-5 mb-4 my-2" style="text-align: center;">Apply for an Appointment</h1>
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <form action="/appointment" method="post">
                            <div class="mb-3">
                                <label for="enterName" class="form-label">Enter Your Name : </label>
                                <input type="text" class="form-control" id="enterName" name="name">
                            </div>
                            <div class="mb-3">
                                <label for="enterAddress" class="form-label">Enter Your Address : </label>
                                <input type="text" class="form-control" id="enterAddress" name="address">
                            </div>
                            <div class="mb-3">
                                <label for="enterNumber" class="form-label">Enter Your Phone Number : </label>
                                <input type="number" class="form-control" id="enterNumber" name="number">
                            </div>

                            <div class="my-3">
                                <p>Select A Gender : </p>
                                <label for="male">Male</label>
                                <input type="radio" id="male" name="gender" value="male">

                                <label for="female">Female</label>
                                <input type="radio" id="female" name="gender" value="female">

                                <label for="other">Other</label>
                                <input type="radio" id="other" name="gender" value="other">

                            </div>

                            <div class="mb-3">
                                <label for="enterAge" class="form-label">Enter Your Age : </label>
                                <input type="number" class="form-control" id="enterAge" name="age">
                            </div>

                            <div class="form-group">
                                <label for="doctor">Select Specialist :</label>
                                <select class="form-control" name="doctor">
                                    <% specialization.forEach(function(specialization) { %>
                                        <option value="<%= specialization._id %>">
                                            <%= specialization.specialization %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary my-3">Apply</button>
                        </form>
                    </div>
                </div>
            </div>


